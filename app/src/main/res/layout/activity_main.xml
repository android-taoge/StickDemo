<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_diff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="内外滑动不一致冲突" />


    <Button
        android:id="@+id/btn_same"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_diff"
        android:layout_alignStart="@id/btn_diff"
        android:layout_alignLeft="@id/btn_diff"
        android:layout_marginTop="20dp"
        android:text="内外滑动一致冲突" />

    <EditText
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/wechat_input_layerlist"
        android:hint="请输入内容"
        android:padding="5dp"
        android:textColor="#666666"
        android:textSize="16sp" />

</RelativeLayout>