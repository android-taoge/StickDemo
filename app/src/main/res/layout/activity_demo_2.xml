<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".DemoActivity_2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="DemoActivity_2"
        android:textColor="#555555"
        android:textSize="18sp"
        android:visibility="gone" />


    <com.tangtao.myrestudyandroid2.same_conflict_widget.MyScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.tangtao.myrestudyandroid2.same_conflict_widget.MatchListView
                android:id="@+id/inListView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_orange_dark"/>

            <com.tangtao.myrestudyandroid2.same_conflict_widget.MatchListView
                android:id="@+id/listView2"
                android:layout_width="match_parent"
                android:background="@android:color/holo_blue_bright"
                android:layout_height="300dp"/>
        </LinearLayout>
    </com.tangtao.myrestudyandroid2.same_conflict_widget.MyScrollView>

</RelativeLayout>